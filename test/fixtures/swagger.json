{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Pet store"
  },
  "schemes": [
    "http"
  ],
  "host": "localhost",
  "basePath": "/v1",
  "paths": {
    "/pets": {
      "get": {
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Returns all the pets"
          }
        },
        "x-amples": [
          {
            "response": {
              "status": 200
            }
          }
        ]
      }
    },
    "/pets/{id}": {
      "get": {
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The pet id",
            "type": "string",
            "required": true,
            "default": "fido3"
          }
        ],
        "responses": {
          "200": {
            "description": "Returns a single pet"
          }
        },
        "x-amples": [
          {
            "request": {
              "scheme": "https",
              "params": {
                "id": "fido4"
              }
            },
            "response": {
              "status": 200,
              "headers": {
                "content-type": "application/json"
              }
            }
          },
          {
            "request": {
              "params": {
                "id": "fido7"
              }
            },
            "response": {
              "status": 200,
              "headers": {
                "content-type": "application/json"
              }
            }
          }
        ]
      }
    },
    "/advancedPets": {
      "get": {
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Returns all the pets",
            "schema": {
              "title": "Pets",
              "type": "array",
              "items": {
                "$ref": "#/definitions/Pet"
              }
            }
          }
        },
        "x-amples": [
          {
            "response": {
              "status": 200,
              "body": [
                {
                  "name": "Goofy",
                  "birthday": 2008
                },
                {
                  "name": "Andy",
                  "birthday": 2010
                },
                {
                  "name": "Kitty",
                  "birthday": 1999
                },
                {
                  "name": "Chick",
                  "birthday": 2013
                },
                {
                  "name": "Cat",
                  "birthday": 2011
                }
              ]
            }
          }
        ]
      }
    }
  },
  "definitions": {
    "Pet": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "birthday": {
          "type": "integer",
          "format": "int32"
        }
      }
    }
  }
}
